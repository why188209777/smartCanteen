<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.CanteenDao">
  <select id="addCanteen">
INSERT INTO canteen(cname,description) VALUES (#{cname},#{description})
  </select>
  <select id="updateCanteen">
  UPDATE canteen SET cname = #{cname}, description=#{description} 
  WHERE cid=#{cid}
  </select>
  <select id="getCanteenByCid" resultType="Canteen">
  SELECT *FROM canteen WHERE cid=#{cid}
  </select>
</mapper>
